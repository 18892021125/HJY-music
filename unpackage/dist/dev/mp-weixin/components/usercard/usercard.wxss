.posterinfo {
  display: flex;
  flex-direction: row;
}
.posterimg {
  margin-top: 30rpx;
  width: 80rpx;
  height: 80rpx;
}
.textinfo {
  margin-left: 20rpx;
  margin-top: 30rpx;
}
.likeinfo {
  font-size: 15rpx;
  color: #7c7c7c;
  letter-spacing: 2rpx;
}
.indexinall {
  margin-top: 30rpx;
  background-color: #FFFFFF;
  border-top-left-radius: 45rpx;
  border-top-right-radius: 45rpx;
}
.index {
  padding-left: 40rpx;
  padding-right: 40rpx;
  width: auto;
}
.title {
  padding-top: 10rpx;
  color: #000000;
  font-weight: bold;
  line-height: 80rpx;
  font-size: 30rpx;
}
.postname {
  font-weight: bold;
  font-size: 29rpx;
}
.content {
  font-size: 28rpx;
  line-height: 45rpx;
}
.imageinfo {
  margin-top: 20rpx;
  padding-bottom: 20rpx;
  display: flex;
}
.imageitem {
  margin-left: 5rpx;
  margin-right: 5rpx;
  flex: 1;
  width: 210rpx;
  height: 210rpx;
}
.moreaction {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  padding-bottom: 20rpx;
}
.redheart {
  margin-right: 20rpx;
  width: 40rpx;
  height: 30rpx;
}
.moreinfo {
  float: right;
  margin-left: auto;
  width: 30rpx;
  height: 30rpx;
}
.comment {
  margin-right: 20rpx;
  margin-left: 160rpx;
  width: 30rpx;
  height: 30rpx;
}
.line {
  position: relative;
  margin-top: 30rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
  height: 1px;
  background-color: #cacbc4;
  text-align: center;
  font-size: 16px;
}

